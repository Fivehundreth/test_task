{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for article in articles %}
                <div class="col-lg-12">
                    <h2>{{ article.header }}</h2>
                    <p>Created at: {{ article.createdAt | date('d/m/Y') }}</p>
                    <p>{{ article.text }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}